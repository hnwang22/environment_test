<p id="notice"><%= notice %></p>
<center>
<h1>Books</h1>
<h1>Haoning Book Ruby-on-Rails Assignment</h1>

<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <b><%= msg %></b>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <%#'$.2f' gives leading dollar sign, then number to 2 decimal places%>
        <%#https://stackoverflow.com/questions/17479795/converting-a-decimal-to-price-format-in-ruby%>
        <td><%= sprintf('$%.2f', book.price) %></td>
        <%#format YYYY-MM-DD%>
        <td><%= book.published_date.strftime('%Y/%m/%d') %></td>

        <td class="actions">
          <%= link_to("Show", book_path(book), :class => 'action show') %>
          <%= link_to('Edit', edit_book_path(book), :class => 'action edit') %>
          <%= link_to('Delete', delete_book_path(book), :class => 'action delete') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Book', new_book_path %>
</center>
